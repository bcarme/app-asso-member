{% extends 'layout.html.twig' %}

{% block title 'Registration for ' ~ booking.title %}

{% block body %}

    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mt-5 h2 font-weight-light">Registration for
                {{ booking.title }}</h1>
            <h2>{{ booking.beginAt ? booking.beginAt|date('d/m/Y H:i') : '' }}</h2>

            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div>
                <input type="submit" class="btn btn-primary" value="S\'inscrire"/>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
