{% extends 'layout.html.twig' %}

{% block title %}Fiche adhérent
{% endblock %}

{% block body %}
    <div class="container-fluid p-5">
        <h1 class="pb-3">Fiche adhérent</h1>
        <a href="{{ path('member_new') }}" class="btn btn-primary my-3">
            <i class="fas fa-user-plus mr-2"></i>Créer un adhérent</a>

        <div class="row">
            {% for member in members %}
                {% if is_granted('SHOW', member) %}
                    <div class="col-xs-12 col-sm-6 col-md-4 m-5">
                        <div class="card">
                            <div class="card-body text-center">
                                <img class=" img-fluid" src="{{ vich_uploader_asset(member, 'imageFile') }}" alt="card image">
                                    <h3 class="card-title">{{ member.firstname }}
                                        {{ member.lastname }}</h3>
                                    {% if is_granted('EDIT', member) %}
                                        <a href="{{ path('member_edit', {'id': member.id}) }}" class="btn btn-primary btn-sm">
                                            <i class="fas fa-user-edit mr-2"></i>Modifier votre Fiche
                                        </a>
                                    {% endif %}
                            </div>
                        </div>
                    </div>
                        <div class="col-xs-12 col-sm-6 col-md-4 m-5">
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <h2>Statut non valide</h2>
                                </li>
                                <li class="list-group-item">Documents à fournir</li>
                                <li class="list-group-item">Attestation médicale</li>
                                <li class="list-group-item">Attestation photo</li>
                                <a class="btn btn-primary mb-5" href="#" role="button">Vos documents</a>
                                <a class="btn btn-primary" href="#" role="button">Payer votre cotistaion</a>
                            </ul>
                        </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
