{% extends 'layoutAdmin.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
<div class="container-fluid p-5">
    <h1>Liste des catégories</h1>
    <a href="{{ path('category_new') }}" class ="btn btn-primary mb-4">Ajouter<i class="fas fa-plus ml-2"></i></a>
      <table class="table table-striped mt-5">
        <thead class="thead-dark">
            <tr>
                <th>Titre</th>
                <th>Couleur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.theme }}</td>
                <td><div class="colorChoice" style="background-color: {{ category.color }}; color:{{ category.color }}">{{ category.color }}</div></td>
              <td class="d-flex pt-3">
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-success mr-4">Éditer<i
                                class="fas fa-pen ml-1"></i></a>
                    <div>
                        {{ include('admin/category/_delete_form.html.twig') }}
                    </div>
                    </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">aucune catégorie trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
