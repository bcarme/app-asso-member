{% extends 'layoutAdmin.html.twig' %}

{% block title %}Modifier le rôle
{% endblock %}

{% block body %}
    <div class="m-5">
        <h1 class="m-4">Modifier le rôle de
            {{ user.firstname }}
            {{ user.lastname }}</h1>
        <div class="col-8 m-4">
            {{ form_start(form) }}
            {{ form_row(form.roles) }}
            <button class="btn btn-primary mt-2">
                <i class="fas fa-user-edit mr-2"></i>Modifier</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
