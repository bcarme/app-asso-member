<form method="post" action="{{ path('location_delete', {'id': location.id}) }}" onsubmit="Voulez-vous supprimer ce lieu ?">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.id) }}">
    <button class="btn btn-danger">Supprimer<i class="fas fa-trash-alt ml-1"></i></button>
</form>
