{% extends 'layoutAdmin.html.twig' %}

{% block title %}Liste des collaborateurs{% endblock %}

{% block body %}
 <div class="container-fluid p-5">
    <h1>Liste des collaborateurs</h1>
    <a href="{{ path('worker_new') }}" class ="btn btn-primary mb-4">Ajouter<i class="fas fa-plus ml-2"></i></a>
      <table class="table table-striped mt-5">
        <thead class="thead-dark">
            <tr>
                <th>Photo</th>
                <th>Prénom Nom</th>
                <th>Date de Naissance</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Fonction</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for worker in workers %}
            <tr>
                <td><img class="img-crud-index" src="{{ vich_uploader_asset(worker, 'imageFile')}}" alt={{worker.firstname}} {{worker.lastname}} ></td>
                <td>{{ worker.firstname }} {{ worker.lastname }}</td>
                 <td>{{ worker.dateOfBirth|date('d/m/Y') }}</td>
                <td>{{ worker.email }}</td>
                <td>{{ worker.phone }}</td>
                <td>{{ worker.address }}, {{ worker.cityCode }} {{ worker.town }}</td>
                <td>{{ worker.job }}</td>
                <td "d-flex pt-3">
                    <a href="{{ path('worker_edit', {'id': worker.id}) }}" class="btn btn-success mr-4">Éditer<i
                                class="fas fa-pen ml-1"></i></a>
                     <div>
                          {{ include('admin/worker/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">aucun collaborateur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
