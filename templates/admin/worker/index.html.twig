{% extends 'layoutAdmin.html.twig' %}

{% block title %}Liste des collaborateurs{% endblock %}

{% block body %}
 <div class="container-fluid p-5">
    <h1>Liste des collaborateurs</h1>
    <a href="{{ path('worker_new') }}" class ="btn btn-primary mb-4">Ajouter<i class="fas fa-plus ml-2"></i></a>
      <table class="table table-striped mt-5">
        <thead class="thead-dark">
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Fonction</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for worker in workers %}
            <tr>
                <td>{{ worker.firstname }}</td>
                <td>{{ worker.lastname }}</td>
                <td>{{ worker.email }}</td>
                <td>{{ worker.phone }}</td>
                <td>{{ worker.address }}</td>
                <td>{{ worker.zipcode }}</td>
                <td>{{ worker.town }}</td>
                <td>{{ worker.jobtype }}</td>
                <td "d-flex pt-3">
                    <a href="{{ path('worker_show', {'id': worker.id}) }}">show</a>
                    <a href="{{ path('worker_edit', {'id': worker.id}) }}" class="btn btn-success mr-4">Éditer<i
                                class="fas fa-pen ml-1"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">aucun collaborateur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
