{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block layout %}
   <div class="container-fluid p-5 homeBg">
    <h1 class="pb-3 text-center">Portail du club</h1>
        <form method="post" class="s-form">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h2 class="h3 mb-4 p-3 text-center s-heading">Se connecter</h2>
            <div class="form-group mb-4">
                <label for="inputEmail"><i class="fas fa-envelope mr-2"></i>Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            </div>
            <div class="form-group mb-4">
                <label for="inputPassword"><i class="fas fa-lock mr-2"></i>Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div>
                <button class="btn btn-lg btn-primary btn-block s-button" type="submit"><i class="fas fa-sign-in-alt mr-2"></i>Connexion</button>
            </div>
            <div  class="pt-5">
            <a href="{{ path('app_forgot_password_request') }}">Vous avez oubli√© votre mot de passe ?</a>
            </div>
        </form>
    </div>
{% endblock %}
